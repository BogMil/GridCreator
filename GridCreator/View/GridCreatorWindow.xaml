<Window x:Class="GridCreator.View.GridCreatorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ViewModel="clr-namespace:GridCreator.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="800"
             WindowStyle="ToolWindow" Closed="Close"
        >
    <Window.Resources>
        <ViewModel:ChangePageViewModel x:Key="vm"/>
    </Window.Resources>
    <Grid Height="700">
        <StackPanel>
            <Button Height="50" Margin="10 10" Command="{Binding InsertAutoGeneratedCodeCommand, Source={StaticResource vm}}">click me</Button>
        </StackPanel>

        
        <Frame x:Name="PageFrame" NavigationUIVisibility="Hidden" Margin="10,85,10,0" Height="550" VerticalAlignment="Top"
            ScrollViewer.VerticalScrollBarVisibility="Visible" 
            ScrollViewer.CanContentScroll="True" 
        />
        
        <Grid Margin="0 650 0 0"  Height="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Grid.Row="1" Margin="10 0 0 0" Command="{Binding GoToPreviousPageCommand, Source={StaticResource vm}}">
                Back
            </Button>

            <Button Grid.Column="2" Grid.Row="1" Margin="0 0 10 0" >
                Finish
            </Button>

            <Button Grid.Column="4" Grid.Row="1" Margin="0 0 10 0" Command="{Binding GoToNextPageCommand, Source={StaticResource vm}}" Name="NextButton">
                Next
            </Button>
            
        </Grid>
    </Grid>
</Window>
