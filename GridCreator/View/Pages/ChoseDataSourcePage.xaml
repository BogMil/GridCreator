             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GridCreator.View.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ComboBox Width="300">
                <ComboBoxItem IsSelected="True" ToolTip="Manualy add columns and their definition">Add columns manualy</ComboBoxItem>
                <ComboBoxItem>Add columns from SQL Server</ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
